<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Esempio di Button per aggiungere un bisogno -->
    <Button
        android:id="@+id/btnAddNeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aggiungi Bisogno" />

    <!-- TextView per visualizzare la lista dei bisogni -->
    <TextView
        android:id="@+id/tvNeeds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista Bisogni"
        android:textSize="16sp"
        android:paddingTop="16dp" />

    <!-- Esempio di ImageView -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

</LinearLayout>
